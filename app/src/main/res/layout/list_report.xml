<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    <TableLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        <TableRow-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content">-->
    <LinearLayout
        android:layout_weight="7.65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:padding="1dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/reportTanggal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorBodyTabel"
                android:text="Tanggal"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportWp"
                    android:text="pompa"
                    android:textColor="@color/black"
                    android:background="@color/colorIjo"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportShift"
                    android:text="shift"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:background="@color/colorBodyTabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportStatus"
                    android:text="status"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportRpm"
                    android:text="rpm"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportHm"
                    android:text="hm"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportFuel"
                    android:text="fuel"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportEngine"
                    android:text="engine"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:background="@color/colorBodyTabel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportPreasure"
                    android:text="preasure"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportDebit"
                    android:text="debit"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:background="@color/colorBodyTabel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportElevasi"
                    android:text="Elevasi"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@color/colorBodyTabelKet"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_weight="13"
                        android:text="Ket : "
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/keterangan"
                        android:textStyle="italic"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!--        </TableRow>-->
<!--    </TableLayout>-->

</LinearLayout>