<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="5.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.97"
            android:padding="1dp">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/reportTlTanggal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorBodyTabel"
                android:text="Tanggal"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlLokasi"
                    android:text="lokasi"
                    android:textColor="@color/black"
                    android:background="@color/colorIjo"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlLamp"
                    android:text="TL"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:background="@color/colorBodyTabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlShift"
                    android:text="shift"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlStatus"
                    android:text="status"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlHm"
                    android:text="hm"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:padding="1dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/reportTlFuel"
                    android:text="fuel"
                    android:textColor="@color/black"
                    android:background="@color/colorBodyTabel"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@color/colorBodyTabelKet"
                    android:padding="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_weight="16"
                        android:text="Ket :"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/reportTlKeterangan"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--        </TableRow>-->
    <!--    </TableLayout>-->

</LinearLayout>